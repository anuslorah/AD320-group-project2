extends navbar
block content
	script(src='/javascript/update.js')

	div(class='grid-container')

		form(action='/updatelisting' method='POST' name='formU')

			div(class='grid-item')
				h2 Select a bar listing to update:
			div(class='grid-item2')
			div(class='grid-item')
				label(for='city') City:
			div(class='grid-item2')
				input(type='text' name='city')
			div(class='grid-item')
				label(for='zip code') Zip:
			div(class='grid-item2')
				input(type='text' name='zip')
			div(class='grid-item')
				label(for='search')
			div(class='grid-item2')
				input(type='submit' name='submit')
			
		if bars != undefined
			ul
				each bar, value in bars
					li= "Bar name: " + bar.barName
					li= "Street address: " + bar.streetAddress
					li= "City: " + bar.city
					li= "Zip code: " + bar.zipcode
					li= "Phone number: " + bar.phone
					li= "Happy hour: " + bar.happyHour
					li= "Awesomeness: " + bar.awesome
					button(class='buttonU' id=bar.barID onclick='update(this.id)') update
		else
			p no bars

			
	include footer.pug