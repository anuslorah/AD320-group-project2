extends navbar
block content

  form(action='/' method='POST' name='formU')
    div(class='grid-container')
      div(class='grid-item')
        h2 Search for a bar:
      div(class='grid-item2')
      div(class='grid-item')
        label(for='city') City:
      div(class='grid-item2')
        input(type='text' name='city')
      div(class='grid-item')
        label(for='zip code') Zip:
      div(class='grid-item2')
        input(type='text' name='zip')
      div(class='grid-item')
        label(for='search')
      div(class='grid-item2')
        input(type='submit' name='submit' value='search')

      each bar in {bars}
          p= ": " + bar

                            ul
                                li= "Bar name: " + JSON.stringify(bar[i].barName)
                                li= "zipcode: " + JSON.stringify(bar[i].streetAddress)
                                li= "City: " + JSON.stringify(bar[i].city)
                                li= "Zip Code: " + JSON.stringify(bar[i].zipcode)
                                li= "Phone: " + JSON.stringify(bar[i].phone)
                                li= "HappyHour: " + JSON.stringify(bar[i].happyHour)
                                li= "What's Awesome: " + JSON.stringify(bar[i++].awesome)


        include footer
