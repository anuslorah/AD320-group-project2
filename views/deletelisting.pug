extends navbar
block content


    form(action="deletelisting" method="post")
        div(class='grid-container')
            div(class='grid-item')
                label
            div(class='grid-item2')
                h3 #{title}
            div(class='grid-item')
                label Bar ID:
            div(class='grid-item2')
                input(type='text' name='id')
            div(class='grid-item')
                label
            div(class='grid-item2')
                input(type='submit' name='submit' value='search')

    if (empty)
        div(class='grid-container')
            div.alert.alert-danger.alert-dismissible.fade.show(role='alert') Error: #{empty}

    if (bars)
        each bar in {bars}
            - var i = 0;
            while i < bar.length
                - var val= bar[i].barID
                div(class='grid-container')
                    form(action='delete' method='post')
                        label= "Bar name: " + JSON.stringify(bar[i].barName)
                        label= "zipcode: " + JSON.stringify(bar[i++].zipcode)
                        input(type='hidden' name='barid' value=val)
                        input(type='submit' value='delete')

    include footer.pug

